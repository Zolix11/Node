<%- include('header') -%>
  <div class="container">
    <div style="text-align: center">
      <h2 class="p-3">
        <% if (typeof song==='undefined' ) { %>
          New
          <% }else{ %>
            Edit
            <% } %>
              song to <%= playlist.name %>
      </h2>
    </div>
    <div class="col">
      <%- include('alert') -%>
        <form method="post">
          <div class="form-group mb-3">
            <label class="form-label">Artist</label>
            <input type="text" class="form-control" id="artist" name="artist"
              value="<% if (typeof song==='undefined' ) { %><% }else{ %><%= song.artist%><% } %>">
          </div>
          <div class="form-group mb-3">
            <label class="form-label">Title</label>
            <input type="text" class="form-control" id="title" name="title"
              value="<% if (typeof song==='undefined' ) { %><% }else{ %><%= song.title%><% } %>">
          </div>
          <div class="form-group mb-3">
            <label class="form-label">Duration(min)</label>
            <input type="text" class="form-control" id="duration" name="duration"
              value="<% if (typeof song==='undefined' ) { %><% }else{ %><%= song.duration%><% } %>">
          </div>
          <div class="mb-2">
            <input type="submit" class="btn btn-primary"
              value="<% if (typeof song==='undefined' ) { %>New<% }else{ %>Edit<% } %> song to <%= playlist.name %>" />
            <a href="/myplaylist/<%= playlist._id %>" class="btn btn-primary">Cancel</a>
          </div>
        </form>
    </div>
  </div>
  <%- include('footer') -%>