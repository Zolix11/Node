<%- include('header') -%>
    <div class="container">
        <div style="text-align: center">
            <h2 class="p-3">
                <% if (typeof playlist==='undefined' ) { %>
                    New
                    <% }else{ %>
                        Edit
                        <%= playlist.name %>
                            <% } %>

            </h2>
        </div>
        <div class="col">
            <form method="post">
                <div class="form-group mb-3">
                    <label class="form-label">
                        Name
                    </label>
                    <input type="text" class="form-control" id="name" name="name"
                        value="<% if (typeof playlist==='undefined' ){%> <%}else{ %><%= playlist.name%><% } %>">
                </div>
                <div class="form-group mb-3">
                    <label class="form-label">
                        Description
                    </label>
                    <input type="text" class="form-control" id="description" name="description"
                        value="<% if (typeof playlist==='undefined' ) {%> <%}else{ %><%= playlist.description%><% } %>">
                </div>
                <div style="text-align: center">
                    <input type="submit" class="btn btn-success" value="Save changes">
                    <% if (typeof playlist==='undefined' ) { %><a href="/myplaylist" class="btn btn-danger"> Cancel
                            changes</a>
                        <%} else{ %>
                            <a href="/myplaylist/<%= playlist._id %>" class="btn btn-danger">Cancel changes</a>
                            <%}%>
                </div>
            </form>
        </div>
    </div>
    <%- include('footer') -%>