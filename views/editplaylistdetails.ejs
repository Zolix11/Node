<%- include('header') -%>
    <div class="container">
        <div style="text-align: center">
            <h2 class="p-3">Edit playlist details</h2>
        </div>
        <div class="col">
            <form>
                <div class="mb-3">
                    <label class="form-label">Name</label>
                    <input type="text" class="form-control">
                </div>
                <div class="mb-3">
                    <label class="form-label">Description</label>
                    <input type="text" class="form-control">
                </div>
                <div style="text-align: center">
                    <a href="/myplaylist/:playlist" class="btn btn-success">Save changes</a>
                    <a href="/myplaylist/:playlist" class="btn btn-danger">Cancel changes</a>
                </div>
            </form>
        </div>
    </div>
    <%- include('footer') -%>